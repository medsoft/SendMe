<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/view_container"
    android:background="@color/gray"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/colorPrimary"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30sp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textviewEntreprise"
                    style="@style/Base.TextAppearance.AppCompat.Headline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:text="Nouvelle Mission "
                    android:textColor="@color/vert5"
                    android:textSize="20sp"
                    android:textStyle="bold" />



            </LinearLayout>

        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="280dp"
            android:layout_height="340dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="10dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="120dp">

            <LinearLayout
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="3">
                <TextView
                    android:id="@+id/textviewTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:gravity="left"
                    android:layout_gravity="center"
                    android:layout_marginTop="20sp"
                    android:text="Caissier"
                    android:textSize="18sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/goodgray"/>

                <RelativeLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="20sp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/logo"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/plane_image" />

                    <LinearLayout
                        android:layout_width="40dp"
                        android:layout_height="20sp"
                        android:layout_marginTop="5dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/rating_background"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textviewRemuneration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentTop="true"
                            android:gravity="right"
                            android:text="Zara"
                            android:textColor="@color/colorPrimary"
                            android:textSize="12sp"
                            android:textStyle="normal" />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentTop="true"
                            android:gravity="right"
                            android:text="€/h"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="12sp"
                            android:textStyle="normal" />
                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:text="Appercu"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="description"
                        android:textColor="@color/goodgray"
                        android:gravity="left"
                        android:textSize="12dp"
                        android:maxLength="140"
                        android:id="@+id/textviewDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                 <LinearLayout
                     android:layout_marginTop="25dp"
                     android:orientation="horizontal"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content">
                     <TextView

                         android:id="@+id/textviewLocation"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="Caissier"
                         android:textColor="@color/goodgray"
                         android:textSize="16sp" />
                     <ImageView
                         android:src="@drawable/grayloc"
                         android:layout_width="15dp"
                         android:layout_height="15dp" />
                 </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_marginTop="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/goodgray"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="20sp"
                    android:gravity="left"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/textviewDebut"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Caissier"
                        android:layout_marginRight="3dp"
                        android:textColor="@color/goodgray"
                        android:textSize="14sp" />
                    <ImageView
                        android:src="@drawable/date"
                        android:layout_marginRight="10dp"
                        android:layout_width="15dp"
                        android:layout_height="15dp" />


                    <TextView
                        android:id="@+id/textviewFin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="Caissier"
                        android:textColor="@color/goodgray"
                        android:textSize="14sp" />
                    <ImageView
                        android:src="@drawable/date"
                        android:layout_marginRight="3dp"
                        android:layout_width="15dp"
                        android:layout_height="15dp" />

                </LinearLayout>

               <LinearLayout
                   android:orientation="horizontal"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content">
                   <ImageView
                       android:src="@drawable/clock"
                       android:layout_marginRight="3dp"
                       android:layout_width="15dp"
                       android:layout_height="15dp" />
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Durée: "
                       android:textColor="@color/goodgray"
                       android:textSize="14sp" />
                   <TextView
                       android:id="@+id/textviewDuree"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="05"
                       android:textColor="@color/goodgray"
                       android:textSize="14sp" />
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Heure(s)"
                       android:textColor="@color/goodgray"
                       android:textSize="14sp" />
               </LinearLayout>

            </LinearLayout>


        </android.support.v7.widget.CardView>


    </RelativeLayout>

</LinearLayout>

