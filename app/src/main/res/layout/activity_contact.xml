<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".activities.ContactActivity">

    <LinearLayout
        android:layout_marginTop="30sp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <EditText
            android:layout_below="@+id/question1"
            android:id="@+id/idMission"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:visibility="invisible"
            android:textColor="@color/vert5"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorPrimaryDark"
            android:hint="id  mission "
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/question1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 1-Qu'est ce qui vous  motive  ?   "
            android:textStyle="normal"
            android:textSize="16dp"
            android:paddingBottom="5dp"
            android:layout_marginTop="50dp"
            android:textColor="#000000"
            />
        <EditText
            android:layout_below="@+id/question1"
            android:id="@+id/motivation"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/vert5"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorPrimaryDark"
            android:hint= "Exemle(je suis disponible  dynamique et j'habite a 15 min)"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/affiche"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="affiche "
            android:textStyle="normal"
            android:textSize="16dp"
            android:paddingBottom="5dp"
            android:layout_marginTop="50dp"
            android:textColor="#000000"
            />


        <TextView
            android:id="@+id/question2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2- Avez-vous bien pris conscience des exigences de la mission ? "
            android:textStyle="normal"
            android:textSize="16dp"
            android:paddingBottom="5dp"
            android:layout_marginTop="50dp"
            android:textColor="#000000"
            />
        <EditText
            android:id="@+id/confirmation"
            android:layout_below="@+id/question2"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/vert5"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorPrimaryDark"
            android:hint= "Exemple : (Oui je confirme)"
            android:textSize="16sp"
            />

    </LinearLayout>

    <Button
        android:onClick="showPopup"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:textAllCaps="false"
        android:text="Envoyer"
        android:textColor="@color/colorWhite"
        android:textSize="17sp"
        />

</RelativeLayout>