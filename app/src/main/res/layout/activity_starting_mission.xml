<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bleu1"
    tools:context=".activities.StartingMissionActivity">



    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar">
    </include>

    <TextView

        android:textStyle="bold"
        android:paddingLeft="15dp"
        android:textSize="30sp"
        android:text="Résumé"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

        <RelativeLayout
            android:background="@drawable/list"
            android:layout_marginTop="50dp"
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:orientation="vertical"
            android:padding="3dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/logo"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/plane_image"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="10dp" />

            </RelativeLayout>
            <LinearLayout
                android:layout_marginTop="70dp"
                android:layout_alignParentEnd="true"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <EditText
                    android:visibility="invisible"
                    android:id="@+id/editTextUser_id"
                    android:layout_width="14dp"
                    android:layout_height="8dp" />
                <EditText
                    android:visibility="invisible"
                android:id="@+id/editTextEntreprise_id"
                android:layout_width="14dp"
                android:layout_height="8dp" />
                <EditText
                    android:visibility="invisible"
                    android:id="@+id/editTextPostulant_id"
                    android:layout_width="14dp"
                    android:layout_height="8dp" />
                <EditText
                    android:visibility="invisible"
                    android:id="@+id/editTextMission_id"
                    android:layout_width="14dp"
                    android:layout_height="8dp" />
                <EditText
                    android:visibility="invisible"
                    android:id="@+id/editTextStatutContrat"
                    android:layout_width="14dp"
                    android:layout_height="8dp" />
                <EditText
                    android:visibility="invisible"
                    android:id="@+id/editTextSoldeContrat"
                    android:layout_width="14dp"
                    android:layout_height="8dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="193dp"
                android:layout_height="146dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:gravity="left"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/textviewEntreprise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dakar-Paris"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
                    android:textColor="@color/colorAccent"
                    android:textSize="15dp" />
                <View
                    android:layout_marginTop="2sp"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/bleu1"/>

                <TextView

                    android:id="@+id/textviewLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="Lundi 06 Aout"
                    android:textColor="@color/goodgray"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/textviewTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 26 kilo disponible"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/goodgray"
                    android:textSize="14dp" />

                <LinearLayout

                    android:layout_width="115dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="3dp"
                    android:paddingBottom="2sp">

                    <TextView
                        android:id="@+id/textviewHeureDebut"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:paddingBottom="2sp"
                        android:text=" 08:00h  "
                        android:gravity="left"
                        android:textColor="@color/goodgray"
                        android:textSize="14dp" />


                    <TextView
                        android:id="@+id/textviewHeureFin"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:paddingBottom="2sp"
                        android:text=" 18:00h"
                        android:textColor="@color/goodgray"
                        android:textSize="14dp" />
                </LinearLayout>
                <LinearLayout
                    android:paddingBottom="3sp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Durée: "

                        android:textColor="@color/goodgray"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/textviewDuree"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="05"
                        android:textColor="@color/goodgray"
                        android:textSize="14sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Heure(s)"
                        android:textColor="@color/goodgray"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="20sp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/rating_background"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textviewRemuneration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:gravity="right"
                        android:text="Zara"
                        android:textColor="@color/colorPrimary"
                        android:textSize="12sp"
                        android:textStyle="normal" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:gravity="right"
                        android:text="€/h"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="12sp"
                        android:textStyle="normal" />
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>


    <RelativeLayout
        android:background="@drawable/list"
        android:padding="4dp"
        android:layout_marginTop="120dp"
        android:layout_margin="2dp"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <ImageView
            android:layout_marginTop="5dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/contact"
            />

        <LinearLayout
            android:padding="3dp"
            android:layout_marginLeft="30dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textviewManager"
                android:text="Mme Camille Roux "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="3dp"
                />
            <TextView
                android:id="@+id/textviewTelephone"
                android:text="0767..."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>




    </RelativeLayout>

    <RelativeLayout
        android:padding="4dp"
        android:background="@drawable/list"
        android:layout_marginTop="120dp"
        android:layout_margin="2dp"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <LinearLayout

            android:gravity="left"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/euro"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="3dp"
                android:textStyle="normal"
                android:text="Total Gain: "
                android:textColor="@color/goodgray"
                android:textSize="30sp" />
            <TextView
                android:id="@+id/textviewGain"
                android:text="130"
                android:textStyle="normal"
                android:textColor="@color/goodgray"
                android:textSize="30sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:text="€"
                android:textStyle="normal"
                android:textSize="30sp"
                android:textColor="@color/goodgray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:padding="4dp"
        android:background="@drawable/list"
        android:layout_margin="2dp"

        android:layout_marginTop="120dp">
        <ImageView
            android:src="@drawable/imp"
            android:layout_width="30dp"
            android:layout_height="30dp"
       />

        <TextView

            android:padding="2sp"
            android:textSize="13dp"
            android:layout_width="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_height="wrap_content"
            android:text="A la fin de la mission cliquez sur valider pour envoyer la facture a l'entreprise qui le validera dans un delai de 5 jours "/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:padding="2dp"
        android:background="@drawable/list"
        android:layout_centerHorizontal="true"
        android:layout_margin="2dp"
        android:layout_marginTop="100dp">

        <me.zhanghai.android.materialratingbar.MaterialRatingBar
            style="@style/Widget.MaterialRatingBar.RatingBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
             />

    </RelativeLayout>


   <RelativeLayout

       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <Button
           android:id="@+id/buttonValiderContrat"
           android:layout_width="match_parent"
           android:layout_height="45dp"
           android:layout_alignParentBottom="true"
           android:background="@color/colorPrimaryDark"
           android:text="Envoyer"
           android:textAllCaps="false"
           android:textColor="@color/colorWhite" />
   </RelativeLayout>



</LinearLayout>