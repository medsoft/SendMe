<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AnimeActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar">
    </include>
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:padding="5dp">
            <LinearLayout
                android:layout_marginTop="30sp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/logo"
                    android:layout_marginTop="10sp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/plane_image" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textviewTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:text="Dakar-Paris"
                    android:textColor="@color/colorAccent"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
                    android:textSize="16dp" />


                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="20sp"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/rating_background"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textviewRemuneration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:gravity="right"
                        android:text="Zara"
                        android:textColor="@color/colorPrimary"
                        android:textSize="12sp"
                        android:textStyle="normal" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:gravity="right"
                        android:text="â‚¬/h"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="12sp"
                        android:textStyle="normal" />
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:layout_marginTop="5sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lieu de la mission"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textviewLocation"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:text="Lieusaint"
                android:textSize="12dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

                <EditText
                    android:visibility="invisible"
                    android:id="@+id/editTextcodeMission"
                    android:layout_width="wrap_content"
                    android:layout_height="2dp" />
            <EditText
                android:visibility="invisible"
                android:id="@+id/editTextEntrepriseId"
                android:layout_width="wrap_content"
                android:layout_height="2dp" />
            <TextView
                android:layout_marginTop="5sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/textviewDescription"
                android:layout_width="wrap_content"
                android:fontFamily="sans-serif"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="kilo disponible  26"
                android:textSize="12dp" />
            <EditText
                android:visibility="invisible"
                android:id="@+id/editTextStatut"
                android:layout_width="wrap_content"
                android:layout_height="2dp" />
            <EditText
                android:visibility="invisible"
                android:id="@+id/editTextUser_id"
                android:layout_width="wrap_content"
                android:layout_height="2dp" />

            <TextView
                android:layout_marginTop="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Votre role"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/textviewRole"
                android:layout_width="wrap_content"
                android:fontFamily="sans-serif"
                android:textSize="12dp"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:text="kilo disponible  26"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

            <TextView
                android:layout_marginTop="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dress code "
                android:textStyle="bold" />
            <TextView
                android:id="@+id/textviewDress_code"
                android:layout_width="wrap_content"
                android:fontFamily="sans-serif"
                android:textSize="12dp"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:text="kilo disponible  26"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

           <TextView
                android:layout_marginTop="30sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Duree de la mission"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/textviewDuree"
                android:layout_width="wrap_content"
                android:textSize="12dp"
                android:fontFamily="sans-serif"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:text="kilo disponible  26"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />
            <TextView
                android:layout_marginTop="35dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Debut mission"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/textviewDebut"
                android:layout_width="wrap_content"
                android:textSize="12dp"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="kilo disponible  26"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />
            <TextView
                android:layout_marginTop="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fin de mission"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/textviewFin"
                android:layout_width="wrap_content"
                android:textSize="12dp"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="kilo disponible  26"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />
        </LinearLayout>

    </ScrollView>
            <Button
                android:id="@+id/buttonApply"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:textColor="@color/colorWhite"
                android:text="Postuler"
                android:textAllCaps="false"
                android:background="@color/colorPrimary"
                android:layout_height="45dp" />
</RelativeLayout>
